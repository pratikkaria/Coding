#include<bits/stdc++.h>
using namespace std;
string getKth(int k)
{
  if(k==1)
    return "1";
  if(k==2)
    return "10";
  vector<string> out;
  out.push_back("1");
  out.push_back("10");
  int a = 1, b = 1;
  int c = 2;
  k = k - 2;
  while(1)
  {
    int x = out.size();
    for(int i=b;i>0;i--)
    {
      string temp = out[x-i] + '1';
      out.push_back(out[x-i]+'0');
      k--;
      if(k==0)
        break;
      if(temp[temp.size()-2]!='1')
      {
        out.push_back(temp);
        k--;
        if(k==0)
          break;
      }
    }
    if(k==0)
      break;
    a = b;
    b = c;
    c = a + b;
  }

  return out.back();
}
int main()
{
  int k;
  cin>>k;
  string str = getKth(k);
  cout<<str<<endl;
  return 0;
}
